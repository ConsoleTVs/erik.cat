---
export interface Props {
  date: Date
}

const { date } = Astro.props
---

<time
  datetime={date.toISOString()}
  class="font-medium text-transparent bg-gradient-to-r from-rose-500 to-violet-500 bg-clip-text">
  {
    date.toLocaleDateString('en-US', {
      dateStyle: 'full',
      timeZone: 'Europe/Madrid',
    })
  }
</time>
